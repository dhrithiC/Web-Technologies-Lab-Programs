<!DOCTYPE html>
<html>
<head>
	<title>Magic Number</title>
	<link rel="stylesheet" type="text/css" href="10style.css">
	<script type="text/javascript">
		function init()
		{
			table = document.getElementById('table');
			play();
		}
		function play()
		{
			var r = parseInt(Math.random() * 100);
			console.log(r);

			var invalid = 0;
			for(var i = 0; i < 10; ++i)
			{
				var n = prompt("Guess!");
				if(!n)
					++invalid;
				else
				{
					if(n == r)
						var remark = 'Equal';
					else if(n > r)
						remark = 'Greater';
					else
						remark = 'Smaller';
				
					tr = document.createElement('tr');
					td_guess = document.createElement('td');
					td_remark = document.createElement('td');
					td_guess.innerHTML = n;
					td_remark.innerHTML = remark;
					tr.appendChild(td_remark);
					tr.appendChild(td_guess);
					table.appendChild(tr);
				}
				if(remark == 'Equal')
				{
					alert('Won');
					break;
				}
				if(invalid == 3)
				{
					alert('Too many invalid inputs!');
					break;
				}
			}
			if(i == 10)
				alert('Lost');
			//location.reload();
		}
	</script>
</head>
<body onload="init()">
	<table id="table">
		<tr>
			<th>Guess</th>
			<th>Remark</th>
		</tr>
	</table>
</body>
</html>
